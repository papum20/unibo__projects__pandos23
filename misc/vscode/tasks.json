{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
    "tasks": [
		{
			"label": "cd",
			"command": "cd ${workspaceFolder}",
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "make clean",
			"command": "make",
			"args": [
				"clean",
				"--ignore-errors"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "make",
			"command": "make",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				//"cd",
				"make clean"
			],
			"dependsOrder": "sequence"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe builld active file",
			"command": "gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-iquoteinclude",
				"-iquoteinclude/helper",
				"-iquoteinclude/kernel",
				"-iquoteinclude/phase1_files",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}\\exe\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Activity generated by the debugger."
		}
	]
}
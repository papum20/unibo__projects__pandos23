{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe builld active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
				"-iquoteinclude",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\exe\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Activity generated by the debugger."
        }
    ]
}